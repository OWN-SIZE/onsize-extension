{
  "manifest_version": 3,
  "version": "1.0",
  "name": "온사이즈 OWNSIZE",
  "description": "쉽고 똑똑한 나만의 쇼핑 도우미, 온사이즈",
  "background": { "service_worker": "script/background.js" },
  "action": {
    "default_popup": "popup.html",
    "default_title": "온사이즈(Own-Size)",
    "default_icon": "assets/img/icon32.png"
  },
  "icons": {
    "16": "assets/img/icon16.png",
    "32": "assets/img/icon32.png",
    "48": "assets/img/icon48.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.musinsa.com/*/goods/*", "https://www.mrporter.com/*/product/*"],
      "js": ["script/sizeTableContent.js", "script/productContent.js"]
    },
    {
      "matches": ["https://ownsize.me/*"],
      "js": ["script/getUserData.js"]
    }
  ],
  "externally_connectable": {
    "matches": ["https://www.musinsa.com/*/goods/*", "https://www.mrporter.com/*/product/*"]
  },
  "web_accessible_resources": [
    {
      "resources": ["icon16.png", "icon32.png", "icon48.png"],
      "matches": []
    }
  ],
  "host_permissions": ["https://www.musinsa.com/*/goods/*", "https://www.mrporter.com/*/product/*"],
  "permissions": ["activeTab", "storage"]
}
